" line numer
set number

" highlight syntax
syntax on

" highlight search
set hlsearch
set incsearch

" ignoring register when searching
"set ignorecase
"set smartcase

" auto indent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" encoding
set encoding=utf-8
set fileencoding=utf-8

" showing currently row/column
set ruler

" Turn off the sound signal
set noerrorbells visualbell t_vb=

" Always display the status bar
set laststatus=2

" Enable mouse for scrolling and resizing.
set mouse=a

" Set the window's title, reflecting the file currently being edited
set title

" Disable swap files.
set noswapfile

" Enable spellchecking
set spell
